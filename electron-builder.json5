{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.cryonicsystems.singularity",
  "asar": true,
  "npmRebuild": false,
  "productName": "Singularity",
  "publish": null,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  // extension-host.cjs and vscode-shim.cjs are spawned as child processes via fork().
  // fork() cannot execute files inside an ASAR archive, so they must be unpacked to disk.
  "asarUnpack": [
    "dist-electron/extension-host.cjs",
    "dist-electron/vscode-shim.cjs"
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [
            "x64",
            "arm64"
        ]
      }
    ],
    "artifactName": "${productName}-Mac-${version}-${arch}-Installer.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-${arch}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": [
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "category": "Development",
    "artifactName": "${productName}-Linux-${version}-${arch}.${ext}"
  }
}
